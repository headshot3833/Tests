@model List<Tests.Models.SubjectViewModel>

<h2>Создание предмета</h2>

<form method="post" asp-action="CreateSubject">
    <div class="form-group">
        <label for="TitleSubject">Title:</label>
        <input type="text" id="TitleSubject" name="TitleSubject" class="form-control" />
        <span class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<hr />

<h2>Существующие предметы</h2>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Тестов</th>
            <th class="actions">Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var subject in Model)
        {
            <tr>
                <td>@subject.TitleSubject</td>
                <td>@subject.Tests.Count</td>
                <td class="actions">
                    <a href="@Url.Action("Create", "TestCreate", new { subjectid = subject.id })" class="btn btn-primary btn-custom">Изменение тестов предмета</a>
                    <form method="post" action="@Url.Action("DeleteSubject", "TestCreate")">
                        <input type="hidden" name="subjectId" value="@subject.id" />
                        <button type="submit" class="btn btn-danger">Удаление Предмета</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>